public class Main {

    // Rail Fence Encryption (2 rails)
    public static String encrypt(String text) {
        StringBuilder rail1 = new StringBuilder();
        StringBuilder rail2 = new StringBuilder();

        for (int i = 0; i < text.length(); i++) {
            if (i % 2 == 0) rail1.append(text.charAt(i));
            else rail2.append(text.charAt(i));
        }
        return rail1.toString() + rail2.toString();
    }

    // Rail Fence Decryption
    public static String decrypt(String cipher) {
        int mid = (int) Math.ceil(cipher.length() / 2.0);
        String rail1 = cipher.substring(0, mid);
        String rail2 = cipher.substring(mid);

        StringBuilder plain = new StringBuilder();
        int r2Index = 0;

        for (int i = 0; i < rail1.length(); i++) {
            plain.append(rail1.charAt(i));
            if (r2Index < rail2.length())
                plain.append(rail2.charAt(r2Index++));
        }
        return plain.toString();
    }

    // MAIN METHOD for OnlineGDB
    public static void main(String[] args) {
        String text = "HELLOWORLD";

        String encrypted = encrypt(text);
        String decrypted = decrypt(encrypted);

        System.out.println("Original : " + text);
        System.out.println("Encrypted: " + encrypted);
        System.out.println("Decrypted: " + decrypted);
    }
}
